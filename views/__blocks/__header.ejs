    <div class="page-layout">
      <header id="site-header">
        <div class="header-nav-container">
          <nav>
            <% if(req.url === "/"){ %>
            <a class="nav__item active" href="/">Главная</a>
            <% } else {%><a class="nav__item" href="/">Главная</a><% } %> <%
            if(req.url === "/catalog"){ %><a
              class="nav__item active"
              href="/catalog"
              >Продукция</a
